import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.util.Locale;

public class latihan26 {
public static void main(String[] args) {
// Mendapatkan waktu saat ini
LocalDateTime sekarang = LocalDateTime.now();

    // Format yang diinginkan: "EEEE, dd MMM yyyy HH:mm:ss"
    DateTimeFormatter formatWaktu = DateTimeFormatter.ofPattern("EEEE, dd MMM yyyy HH:mm:ss", new Locale("id", "ID"));
    
    // Menampilkan waktu saat ini dalam format yang ditentukan
    String waktuSekarang = sekarang.format(formatWaktu);
    System.out.println("Hari ini adalah hari : " + waktuSekarang);
    
}
}
